{
  "manifest_version": 2,
  "author": "Brandon Parsons",
  "name": "Progress Reporter",
  "description": "Reports Progress on Platoweb.com",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png"
  },

  "-ms-preload": {
    "backgroundScript": "backgroundScriptsAPIBridge.js",
    "contentScript": "contentScriptsAPIBridge.js"
  },

  "content_scripts": [{
    "matches": ["https://learner.ple.platoweb.com/secondary/lessonportfolio", "https://learner.ple.platoweb.com/secondary/messages"],
    "js": ["content-script.js"]
  }],
  
  "permissions": [
    "storage"
  ]
}
